<script>
    let dws_chart;
    const dws_availableSpace = <?=json_encode(@disk_total_space('/mnt/user/') ?: 0)?>;

    const options = {
        chart: {
            type: 'line',
            height: 400,
            toolbar: { show: false },
            zoom: { enabled: false },
            animations: { enabled: false },
        },
        series: [],
