                formatter: function(value) {
                    return dws_formatBytes(value);
                },
            },
        },
        noData: {
            text: 'Waiting for Forecast...',
            align: 'center',
            verticalAlign: 'middle',
            style: {
                color: '#666',
                fontSize: '15px',
            },
        },
